    title Componentes

    include includes/css/core.pug

    include includes/css/custom.pug

  body#page-top.fixed-nav.sticky-footer.bg-dark
    include includes/navbar.pug
    .content-wrapper
      .container-fluid
        // Breadcrumbs
        ol.breadcrumb
          li.breadcrumb-item
            a(href='#') Informacion General
          li.breadcrumb-item.active Componentes
        .row
          .col-sm-12
            h1.text-center Componentes
            hr
          .col-sm-12
            form.form-inline
              .col-sm-12
                h4.fondo1 Nuevo Componente
              form.form-group
                .form-group.col-sm-4.col-md-4
                  label.form-control-label.col-sm-12.col-md-4
                    span Nombre
                  .col-sm-12.col-md-8.col-xl-8
                    input.form-control(type='text')
                .form-group.col-sm-4.col-md-4
                  label.form-control-label.col-sm-12.col-md-4
                    span TAG
                  .col-sm-12.col-md-8.col-xl-8
                    input.form-control(type='text')
                .form-group.col-sm-4.col-md-4
                  label.form-control-label.col-sm-12.col-md-4
                    span Linea
                  .col-sm-12.col-md-8.col-xl-8
                    input.form-control(type='text')
                .form-group.col-sm-4.col-md-4.espaciador
                  label.form-control-label.col-sm-12.col-md-4
                    span Modelo de Serie
                  .col-sm-12.col-md-8.col-xl-8
                    input.form-control(type='text')
                legend.col-form-legend.col-sm-2  Tipo de Equipo : 
                .col-sm-2  
                  .form-check
                    label.form-check-label
                      input.form-check-input(type='radio', value='Mecánico', checked) 
                      |Mecánico
                  .form-check
                    label.form-check-label
                      input.form-check-input(type='radio', value='Eléctrico') 
                      |Eléctrico
                  .form-check
                    label.form-check-label
                      input.form-check-input(type='radio', value='Electricomecánico') 
                      |Electricomecánico
                  .form-check
                    label.form-check-label
                      input.form-check-input(type='radio', value='Otro') 
                      |Otro

                .col-sm-12.form-group.espaciador
                  label.control-label.col-sm-1 Descripcion 
                  textarea.form-control.col-sm-12
                .col-sm-12.form-group.espaciador
                  label.control-label.col-sm-2 Subir Imagen 
                  input#exampleInputFile.form-control-file(type="file" aria-describedby="fileHelp" accept="image/*")
                .col-sm-12.form-group.espaciador
            .row
              .col-sm-12.form-group
                button.btn.btn-primary.btn-lg.pull-right(type='submit') Enviar
      
